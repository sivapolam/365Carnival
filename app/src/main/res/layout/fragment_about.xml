<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.techplicit.mycarnival.ui.activities.fragments.AboutFragment"
    android:background="@color/material_grey_800">

    <View
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:id="@+id/view"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_carnival_logo_aboutus"
        android:layout_alignBottom="@+id/view"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/app_name"
        android:layout_below="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_below="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/version_name"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:id="@+id/text_version"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All rights reserved."
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:id="@+id/text_copy_rights1"
        android:textAppearance="?android:textAppearanceSmall"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_above="@+id/text_copy_rights1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copyright Â© 2015-2017 Keysoft America Inc."
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:id="@+id/text_copy_rights2"
        android:textAppearance="?android:textAppearanceSmall"
        android:layout_margin="5dp"/>

</RelativeLayout>
