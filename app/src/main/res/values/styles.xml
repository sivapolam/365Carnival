<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:actionMenuTextColor">@color/white</item>

        <!-- Customize your theme here. -->
    </style>

    <!--<style name="DialogTheme" parent="Base.V7.Theme.AppCompat.Light.Dialog">
        &lt;!&ndash; Customize your theme here. &ndash;&gt;
        <item name="android:background">@color/white</item>
    </style>-->

    <style name="NavigationTab" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/transperant_black_bottom</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/transperant_black_bottom</item>
        <item name="tabTextAppearance">@style/NavigationTabTextAppeareance</item>
    </style>

    <style name="NavigationTabTextAppeareance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">8sp</item>
        <item name="android:background">@drawable/tab_selector</item>
    </style>

    <style name="FriendFinderTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/tab_selector</item>
    </style>

    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabBackground">@drawable/tab_selector</item>
    </style>

    <style name="buttonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">@drawable/button_style</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/horizontal_scroll_buttons_text_size</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style parent="@android:style/Widget.Spinner" name="SpinnerwithNoArrow">
        <!--<item name="android:background">@android:drawable/edit_text</item>-->
        <item name="android:background">@drawable/rounded_corner_spinner</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
